{
  "compilerOptions": {
    // Global configuration
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es7"],
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": true,
    "strict": false,
    "moduleResolution": "node",
    "types": [
      "@types/node"
    ],

    // Specific to this package
    "outDir": "./lib",
    "rootDir": "./src",
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceRoot": "./src",
    "mapRoot": "./lib",
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}